<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/value_4dp"
    app:cardElevation="@dimen/value_4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_16dp">

        <TextView
            android:id="@+id/tvItemUniversity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/value_12sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Nama Universitas"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/value_4dp"
            android:gravity="start"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:visibility="visible"
            tools:text="Nama Mahasiswa"
            app:layout_constraintTop_toBottomOf="@id/tvItemUniversity"/>

        <TextView
            android:id="@+id/tvItemCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="@dimen/value_14sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Nama Kelas"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>